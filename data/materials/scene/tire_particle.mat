material TireTrail
{
    parent base
    emissive 1 1 1
    ambient 0 0 0
    diffuse 0 0 0 1
    scene_blend alpha_blend
    depth_write off
    depth_bias 3
    cull_hardware none
    vertex_colour true
    diffuseMap trail.png
    //alphaMap trail.png
    //diffuse_address_mode mirror  // 2d texture not supported
}


material Mud
{
	parent Base_particle
	diffuseMap mud.png
    alpha_rejection greater 64
    scene_blend alpha_blend
    soft_particles true
    diffuse_address_mode clamp
}

